{
  "name": "Markdown Lite PWA",
  "short_name": "MarkdownLite",
  "description": "A lightweight Markdown editor with live preview and file management - PWA version",
  "version": "1.0.0",
  "start_url": "/markdown-lite-pwa/",
  "scope": "/markdown-lite-pwa/",
  "display": "standalone",
  "orientation": "any",
  "background_color": "#ffffff",
  "theme_color": "#007acc",
  "categories": ["productivity", "utilities"],
  "icons": [
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "file_handlers": [
    {
      "action": "/markdown-lite-pwa/",
      "accept": {
        "text/markdown": [".md", ".markdown"]
      }
    }
  ]
}